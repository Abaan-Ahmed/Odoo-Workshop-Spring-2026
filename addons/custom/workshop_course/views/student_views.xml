<odoo>
    <record id="view_workshop_student_list" model="ir.ui.view">
        <field name="name">workshop.student.list</field>
        <field name="model">workshop.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_workshop_student_form" model="ir.ui.view">
        <field name="name">workshop.student.form</field>
        <field name="model">workshop.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="course_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_workshop_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">workshop.student</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>