<odoo>
    <record id="view_workshop_course_list" model="ir.ui.view">
        <field name="name">workshop.course.list</field>
        <field name="model">workshop.course</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="price"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_workshop_course_form" model="ir.ui.view">
        <field name="name">workshop.course.form</field>
        <field name="model">workshop.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="description"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_workshop_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">workshop.course</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>